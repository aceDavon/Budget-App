<div class="flex flex-col gap-2 relative text-white">
  <h2 class="bg-blue-800 text-center py-4">
  <i class="fa-solid fa-arrow-left float-left mt-1 ml-2"></i>
  <span class="-ml-4">Log in</span>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="my-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border-none focus:border-none bg-white text-gray-800' %>
    </div>

    <div class="my-1">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'border-none focus:border-none bg-white text-gray-800' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class:'absolute top-5 right-2 text-xs' %>
    </div>
  <% end %>
  <div class="text-center mt-4 text-gray-400">
    <%= render "devise/shared/links" %>
  </div>
</div>