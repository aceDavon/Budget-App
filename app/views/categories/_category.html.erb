<div id="<%= dom_id category %>" class="my-5">
    <div class="flex flex-col border border-gray-200 rounded-md p-2 bg-white mx-2 shadow-lg">
    <div class="flex justify-between">
      <div class="w-8/12 flex gap-2">
      <div class="my-5">
        <img src="<%= category.icon %>" alt="<%= category.icon %>" class="w-8 h-auto object-contain rounded-lg">
      </div>
      <div class="my-5">
        <%= link_to category.name, category %>
      </div>
    </div>
    <div class="flex w-4/12">
      <div class="my-5 mr-12 font-bold">
        <% amount = 0 %>
        <% category.transactions.each do |transaction| %>
          <% amount += transaction.amount %>
        <% end %>
        <p>$<%= amount %></p>
      </div>
    </div>
    </div>
    <span class="text-sm text-gray-300">
      <%= category.created_at.strftime("%d %b %y")%>
    </span>
  </div>
</div>
